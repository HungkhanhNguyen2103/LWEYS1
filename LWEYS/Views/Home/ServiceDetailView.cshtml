@{
    ViewData["Title"] = "Thông tin dịch vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["HiddenBanner"] = "d-none";
}
@model ServiceModel
<div class="container-1">
    <div class="image-1">
        <img src="~/images/serviceDetail.png" alt="Listening Service">
    </div>
    <form method="post" asp-action="Booking" asp-route-serviceId="@Model.Id">
        <div class="content-1">
            <div class="price-1">
                <span class="tag-1">@Model.ServicePackage</span>
                <div style="display:flex;align-items:baseline;font-size:17px"><div style="font-size:32px;margin-right:3px">@Model.Amount</div>vnđ/hour</div>
            </div>
            <div class="booking-1">
                <label>Ngày đặt:</label>
                <input class="d-none" name="BookingDate" id="datetimepicker" style="width:100%" type="text" placeholder="Ngày đặt" required>
                <button type="submit" class="mt-3 mb-3">Đặt lịch</button>
            </div>
            <div class="description-1">
                <span>Mô tả</span>
                @Model.Description
            </div>
        </div>
    </form>
</div>
<h3 class="title">Đánh giá của khách hàng</h3>
<section class="articles articles-home">
    @foreach (FeedbackModel feedbackModel in ViewBag.Feedbacks)
    {
        <article style="padding:20px" class="post">
            <div class="rating-box">
                <i class="@(feedbackModel.Rating >= 2 ? "fas checked" : "far") fa-star"></i>
                <i class="@(feedbackModel.Rating >= 4 ? "fas checked" : "far") fa-star"></i>
                <i class="@(feedbackModel.Rating >= 6 ? "fas checked" : "far") fa-star"></i>
                <i class="@(feedbackModel.Rating >= 8 ? "fas checked" : "far") fa-star"></i>
                <i class="@(feedbackModel.Rating >= 10 ? "fas checked" : "far") fa-star"></i>
            </div>
            <h2 style="padding-left:0px">@feedbackModel.Message</h2>
            <span>@feedbackModel.UserName</span>
        </article>
    }
</section>
<section class="articles-question">
    <h3 class="">Liên hệ nếu bạn có thắc mắc</h3>
    <div class="input-container">
        <input id="question-id" type="text" placeholder="Câu trả lời">
        <button onclick="sendQuestion()">Submit</button>
    </div>
</section>
<script>
    document.getElementById('serviceview-cls').classList.add("active");
</script>