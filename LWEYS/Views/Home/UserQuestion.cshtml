@{
    ViewData["Title"] = "Chính sách khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["HiddenBanner"] = "d-none";
}
@model UserQuestion
<div class="hero mb-5">
    <h1 style="font-weight:400;font-size:24px">Nơi giải đáp thắc mắc của bạn</h1>
    <form class="form-feedback" method="post" asp-action="SendQuestion">
        <div class="mb-2 form-group">
            <label>Họ tên</label>
            <input asp-for="FullName" value="@User.Identity.Name" type="text" class="form-control" required placeholder="Họ tên">
        </div>
        <div class="mb-2 form-group">
            <label>Email</label>
            <input asp-for="Email" value="@ViewBag.Email" type="email" class="form-control" required placeholder="Email">
        </div>
        <div class="mb-2 form-group">
            <label>Tin nhắn</label>
            <textarea asp-for="Message" rows="5" class="form-control" placeholder="Tin nhắn">@ViewBag.Message</textarea>
        </div>
        <button type="submit" style="background-color:#363636;color:white;width:6rem" class="btn">Submit</button>
    </form>
</div>
<section class="articles-question">
    <h3 class="">Liên hệ nếu bạn có thắc mắc</h3>
    <div class="input-container">
        <input id="question-id" type="text" placeholder="Câu trả lời">
        <button onclick="sendQuestion()">Submit</button>
    </div>
</section>
<script>
    document.getElementById('feedback-cls').classList.add("active");
</script>